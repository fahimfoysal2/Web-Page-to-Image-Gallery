{
    "manifest_version": 3,
    "name": "Web Image Gallery - Manga Reader",
    "version": "1.0",
    "description": "Displays all the images of the current page in a gallery style",
    "action": {
        "default_icon": {
            "16": "assets/images/icons/icon-16.png",
            "32": "assets/images/icons/icon-32.png",
            "48": "assets/images/icons/icon-48.png",
            "128": "assets/images/icons/icon-128.png"
        }
    },
    "permissions": ["scripting", "activeTab", "storage"],
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "assets/images/icons/icon-16.png",
        "32": "assets/images/icons/icon-32.png",
        "48": "assets/images/icons/icon-48.png",
        "128": "assets/images/icons/icon-128.png"
    },
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+M",
                "mac": "Command+M"
            }
        }
    }
}